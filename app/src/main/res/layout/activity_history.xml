<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userinfo.HistoryActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_actionbar_height"
        android:orientation="horizontal"
        android:background="@drawable/bg_querybar"
        android:id="@+id/linearLayout3">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_actionbar_icon_margin"
            android:padding="@dimen/custom_actionbar_icon_padding"
            android:src="@drawable/ic_actionbar_back"
            android:background="@drawable/bg_backbutton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Nav_item_history"
            android:gravity="center_vertical"
            android:textSize="@dimen/custom_actionbar_title_textsize"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout3"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Tasks"
            android:id="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#858c92"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:elevation="3dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri, Mar 11, 2016"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingTop="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_redtag"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RED EVENT"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_toEndOf="@+id/imageView2"
                android:textColor="@color/colorRedEvent"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: No.73, Huatuo Rd"
                android:id="@+id/textView12"
                android:textSize="12dp"
                android:layout_below="@+id/textView11"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: No.1433, Cailun Rd"
                android:id="@+id/textView13"
                android:textSize="12dp"
                android:layout_below="@+id/textView12"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_accountmsgnav"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
