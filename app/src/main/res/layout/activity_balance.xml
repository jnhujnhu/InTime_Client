<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.mapapplication.ui.userinfo.BalanceActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_actionbar_height"
        android:orientation="horizontal"
        android:background="@drawable/bg_querybar"
        android:id="@+id/linearLayout">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_actionbar_icon_margin"
            android:padding="@dimen/custom_actionbar_icon_padding"
            android:src="@drawable/ic_actionbar_back"
            android:background="@drawable/bg_backbutton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Success"
            android:gravity="center_vertical"
            android:textSize="@dimen/custom_actionbar_title_textsize"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/linearLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_success"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_userportriat_border"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Balance: "
            android:id="@+id/balance_balance_label"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/balance_increment" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:id="@+id/balance_done"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="@drawable/bg_pending_friends_accept_btn"
            android:elevation="4dp"
            android:layout_below="@+id/balance_balance_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="0 Points"
            android:id="@+id/balance_balance"
            android:layout_alignTop="@+id/balance_balance_label"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/balance_balance_label"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+0 points"
            android:id="@+id/balance_increment"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</RelativeLayout>
