<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userinfo.SettingsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_actionbar_height"
        android:orientation="horizontal"
        android:background="@drawable/bg_querybar"
        android:id="@+id/linearLayout2">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_actionbar_icon_margin"
            android:padding="@dimen/custom_actionbar_icon_padding"
            android:src="@drawable/ic_actionbar_back"
            android:background="@drawable/bg_backbutton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Nav_item_setting"
            android:gravity="center_vertical"
            android:textSize="@dimen/custom_actionbar_title_textsize"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/linearLayout2"
        android:background="#f8f8f8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_queryinput_border"
            android:elevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Notifications"
                    android:id="@+id/textView20"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView4"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:checked="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Do Not Disturb"
                    android:id="@+id/textView22"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:checked="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView6"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Location Service"
                    android:id="@+id/textView23"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:checked="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView7"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Messages"
                    android:id="@+id/textView24"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView14"
                    android:src="@drawable/ic_accountmsgnav"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView8"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Themes"
                    android:id="@+id/textView25"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView13"
                    android:src="@drawable/ic_accountmsgnav"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Default"
                    android:id="@+id/textView30"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/imageView13" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Display"
                    android:id="@+id/textView26"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/ic_accountmsgnav"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Normal"
                    android:id="@+id/textView31"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imageView12" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:id="@+id/imageView10"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="My Account"
                    android:id="@+id/textView27"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/ic_accountmsgnav"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Logged-in as TestUser"
                    android:id="@+id/textView29"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imageView11"
                    android:layout_marginRight="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Like me on Facebook"
                    android:id="@+id/textView28"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="30dp" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
