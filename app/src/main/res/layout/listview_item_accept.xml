<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <TextView android:id="@+id/detail_item_accept" style="@style/detail_item_inner_text"
            android:ellipsize="end"
            android:lines="1"
            android:layout_weight="0"/>
        <ImageView android:id="@+id/detail_item_accept_icon" style="@style/detail_item_inner_icon" />

        <View style="@style/fill_space" />

        <TextView android:id="@+id/detail_item_accept_status" style="@style/detail_item_inner_text" android:layout_weight="0" />
        <ImageView android:id="@+id/detail_item_accept_cancel" style="@style/detail_item_inner_icon_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/detail_item_accept_stay_or_leave"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <View style="@style/fill_space" />

        <Button
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/detail_item_accept_stay"
            android:layout_marginEnd="10dp"
            android:padding="0dp"
            android:background="@drawable/bg_large_button_green"
            android:text="Stay"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:id="@+id/detail_item_accept_leave"
            android:padding="0dp"
            android:background="@drawable/bg_large_button_red"
            android:text="Leave"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>