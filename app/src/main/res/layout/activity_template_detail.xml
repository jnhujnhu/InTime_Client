<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.mapapplication.ui.userinfo.TemplateDetailActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        android:id="@+id/template_detail_loading"
        android:indeterminateTint="#646464"
        android:indeterminateTintMode="src_atop" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_actionbar_height"
        android:orientation="horizontal"
        android:id="@+id/RelativeLayout1"
        android:background="@drawable/bg_querybar">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_actionbar_icon_margin"
            android:padding="@dimen/custom_actionbar_icon_padding"
            android:src="@drawable/ic_actionbar_back"
            android:background="@drawable/bg_backbutton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Nav_header_template_detail"
            android:gravity="center_vertical"
            android:textSize="@dimen/custom_actionbar_title_textsize"
            android:layout_toRightOf="@+id/btn_back" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/template_more"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more_vert"
            android:padding="15dp"
            android:background="#faf8f8"
            android:layout_marginRight="2dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/RelativeLayout1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/template_detail_type_linear">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Type: "
                android:id="@+id/template_detail_type_label"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/template_detail_type_icon"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/template_detail_type_label"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/template_detail_type"
                android:layout_alignTop="@+id/template_detail_type_label"
                android:layout_alignParentTop="false"
                android:layout_toRightOf="@+id/template_detail_type_icon"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="17sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Title: "
            android:id="@+id/template_detail_title_label"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/template_detail_type_linear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Category: "
            android:id="@+id/template_detail_category_label"
            android:layout_alignParentStart="true"
            android:gravity="fill_vertical"
            android:layout_below="@+id/template_detail_title_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Privacy: "
            android:id="@+id/template_detail_privacy_label"
            android:layout_alignParentStart="true"
            android:gravity="fill_vertical"
            android:layout_below="@+id/template_detail_category_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Enrollment: "
            android:id="@+id/template_detail_enrollment_label"
            android:layout_alignParentStart="true"
            android:gravity="fill_vertical"
            android:layout_below="@+id/template_detail_privacy_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Rewards: "
            android:id="@+id/template_detail_rewards_label"
            android:layout_alignParentStart="true"
            android:gravity="fill_vertical"
            android:layout_below="@+id/template_detail_enrollment_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Location: "
            android:id="@+id/template_detail_location_label"
            android:layout_alignParentStart="true"
            android:gravity="fill_vertical"
            android:layout_below="@+id/template_detail_rewards_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Detailed Description: "
            android:id="@+id/template_detail_content_label"
            android:layout_alignParentStart="true"
            android:gravity="fill_vertical"
            android:layout_below="@+id/template_detail_location_label" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an order"
            android:id="@+id/friend_detail_modify_btn"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/template_detail_content_label"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="@drawable/bg_pending_friends_accept_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_title"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_title_label"
            android:layout_toRightOf="@+id/template_detail_title_label"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_category"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_category_label"
            android:layout_toRightOf="@+id/template_detail_category_label"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_privacy"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_privacy_label"
            android:layout_toRightOf="@+id/template_detail_privacy_label"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_enrollment"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_enrollment_label"
            android:layout_toRightOf="@+id/template_detail_enrollment_label"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_rewards"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_rewards_label"
            android:layout_toRightOf="@+id/template_detail_rewards_label"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_location"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_location_label"
            android:layout_toRightOf="@+id/template_detail_location_label"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/template_detail_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/template_detail_content_label"
            android:layout_toRightOf="@+id/template_detail_content_label"
            android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>
