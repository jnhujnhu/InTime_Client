<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_friends_user_pending"
        android:id="@+id/imageView16"
        android:layout_margin="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZKW"
        android:layout_toRightOf="@+id/imageView16"
        android:layout_centerVertical="true"
        android:id="@+id/friends_pending_username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Accept"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_pending_friends_accept_btn"
        android:stateListAnimator="@null"
        android:textColor="#FFFFFF"
        android:id="@+id/friends_pending_accept_btn" />

</RelativeLayout>