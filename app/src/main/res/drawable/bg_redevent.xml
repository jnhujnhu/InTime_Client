<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/eventbutton_corner_radius"
                android:topLeftRadius="@dimen/eventbutton_corner_radius"/>
            <solid android:color="@color/colorRedEvent"/>
            <stroke android:width="1px" android:color="#ff2929"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/eventbutton_corner_radius"
                android:topLeftRadius="@dimen/eventbutton_corner_radius"/>
            <solid android:color="#c22828"/>
            <stroke android:width="1px" android:color="#ff2929"/>
        </shape>
    </item>
</selector>