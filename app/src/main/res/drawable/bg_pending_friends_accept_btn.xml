<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/eventbutton_corner_radius"/>
            <solid android:color="@color/colorGreenEvent"/>
            <stroke android:width="1px" android:color="#7ed75b"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/eventbutton_corner_radius"/>
            <solid android:color="#426040"/>
            <stroke android:width="1px" android:color="#7ed75b"/>
        </shape>
    </item>
</selector>